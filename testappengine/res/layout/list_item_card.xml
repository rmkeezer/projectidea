<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selectable_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dip" >

        <LinearLayout
            android:id="@+id/voteBlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvUpvotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center"
                    android:text="4"
                    android:textColor="@color/grey"
                    android:textSize="36sp" />

                <TextView
                    android:id="@+id/tvDownvotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|center"
                    android:text="1"
                    android:textColor="@color/grey"
                    android:textSize="36sp" />
            </LinearLayout>

            <LinearLayout
                style="?android:attr/buttonBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/ibCheckmark"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:src="@drawable/checkmarkgreyed"
                    android:text="@string/list_item_left_button" />

                <ImageButton
                    android:id="@+id/ibCrossmark"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:src="@drawable/crossgreyed"
                    android:text="@string/list_item_right_button" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvVotePercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/voteBlock"
            android:gravity="left|center"
            android:text="80%"
            android:textColor="@color/lightgreen"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvUsernameCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="right|center"
            android:text="Username"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textview412"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tvUsernameCard"
            android:gravity="right|center"
            android:text=" Posted by "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvDatePosted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tvUsernameCard"
            android:gravity="right|center"
            android:text="12/21/12"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textview41232"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvUsernameCard"
            android:layout_toLeftOf="@id/tvDatePosted"
            android:gravity="right|center"
            android:text=" on "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvIdea"
            style="@style/ListItemText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvVotePercent"
            android:layout_toRightOf="@id/voteBlock"
            android:gravity="left" />
    </RelativeLayout>

    <View
        android:id="@+id/list_item_seperator"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="@color/light_grey" />

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/bPromotionCard"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_weight="5"
            android:text="Promote"
            android:textSize="14dp" />

        <View
            android:id="@+id/vertical_list_seperator"
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@color/light_grey" />

        <Button
            android:id="@+id/bJunkButton"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_weight="5"
            android:text="Junk Idea"
            android:textSize="14dp" />

        <View
            android:id="@+id/vertical_list_seperator2"
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@color/light_grey" />

        <Button
            android:id="@+id/bReply"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_weight="5"
            android:text="Reply"
            android:textSize="14dp" />

        <View
            android:id="@+id/vertical_list_seperator2"
            android:layout_width="1dip"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:background="@color/light_grey" />

        <Button
            android:id="@+id/bViewComments"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_weight="4"
            android:text="Comments (#)"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>